<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/tilebkg"
    android:padding="5dp">

    <TextView
        android:id="@+id/lblMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/menu_title" />

  
    
    <GridView android:id="@+id/pinGrid"              
    				android:layout_width="wrap_content" 
   					android:layout_height="wrap_content"
   					android:columnWidth="70dp"   					
    				android:numColumns="auto_fit"
    				android:verticalSpacing="4dp"
    				android:horizontalSpacing="4dp"
    				android:stretchMode="columnWidth"
    				android:layout_below="@id/lblMenu"
    				android:layout_centerHorizontal="true"/>

    
    <TextView android:id="@+id/saveTxt"
     				android:layout_width="wrap_content" 
   					android:layout_height="wrap_content"
   					android:text="@string/menu_save"
   					android:layout_below="@id/pinGrid"
   					android:layout_alignParentLeft="true"
   					style="@style/PinMenuBtnSave"
   					/>
    
    <TextView android:id="@+id/clearTxt"
     				android:layout_width="wrap_content" 
   					android:layout_height="wrap_content"
   					android:text="@string/menu_clear"
   					android:layout_below="@id/saveTxt"
   					android:layout_alignParentRight="true"
   					android:layout_alignBaseline="@id/saveTxt"
   					style="@style/PinMenuBtnClr"
   					/>


	<TextView android:id="@+id/loadDesign"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/menu_load"
					android:layout_centerHorizontal="true"
					android:layout_below="@id/saveTxt"
					style="@style/PinMenuBtnLoad"
					/>
    
    <TextView android:id="@+id/bkgTxt"
     				android:layout_width="wrap_content" 
   					android:layout_height="wrap_content"
   					android:text="@string/menu_bkg"   					
   					android:layout_centerHorizontal="true"
   					android:layout_below="@id/loadDesign"
   					style="@style/PinMenuBtnBkg"
   					/>
     
         			
    

</RelativeLayout>